<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MPGTracker"
    tools:showIn="@layout/activity_mpgtracker">

    <EditText
        android:id="@+id/sMPG"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="482dp"
        android:ems="10"
        android:fontFamily="@font/open_sans_light"
        android:hint="Current Mileage"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/galNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:ems="10"
        android:fontFamily="@font/open_sans_light"
        android:hint="Gallons"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sMPG" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="380dp"
        android:layout_height="42dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="137dp"
        android:fontFamily="@font/open_sans"
        android:text="Add Fill-Up"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/sMPG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/eMPG"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="1dp"
        android:ems="10"
        android:fontFamily="@font/open_sans_light"
        android:hint="Ending Mileage"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/galNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sMPG" />

    <TextView
        android:id="@+id/fMPG"
        android:layout_width="119dp"
        android:layout_height="37dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="46dp"
        android:fontFamily="@font/open_sans"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sMPG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/calcMPG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="93dp"
        android:fontFamily="@font/open_sans"
        android:text="Calculate MPG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/galNum" />

</android.support.constraint.ConstraintLayout>